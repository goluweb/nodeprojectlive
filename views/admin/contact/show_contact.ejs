
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
                  <!-- <a href="/level/addlevel" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Level</a> -->
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> -->
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Email
                          </th>
                          <th>
                            phone No.
                          </th>
                          <th>
                            Requirement
                          </th>    
                          <th>
                            Message
                          </th>  
                          <th>
                            Date
                            </th>                     
                          <th>
                            Action
                          </th>
                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        contact.forEach(function(con){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= con.name %>
                          </td>

                          <td>
                            <%= con.email %>
                          </td>

                          <td>
                            <%= con.contact %>
                          </td>

                          <td>
                            <%= con.requirement %>
                          </td>

                          <td>
                            <%= con.message %>
                          </td> 

                       <td>
                        <%= con.added_on.toLocaleString('default',{day:'numeric',month:'long',year:'numeric'})%>
                        </td>
                        
                          <td>
                           
                            <% if(inArray(locals.usersession.roles_id.permission,'deleteContact')){ %>
                         <a href="/contact/delete_contact/<%= con._id %>" data-toggle="tooltip" data-placement="top" title="delete Button" onclick = "if (! confirm('are you sure you want to delete this contact?')) { return false; }" class="btn btn-primary btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                         <% } %>
 
                         <% if(inArray(locals.usersession.roles_id.permission,'mailContact')){ %>
                         <a style="margin-top: 2px;" href="mailto: <%= con.email%>" target="_blank" class="btn btn-success btn-sm"><i class="fa fa-envelope" aria-hidden="true"></i></a>
                         <% } %>
 

                          </td>
                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
