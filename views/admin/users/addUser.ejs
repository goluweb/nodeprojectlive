<div class="row justify-content-center" style="margin:20px">
						<div class="col-lg-12 col-xl-12 col-md-12 col-sm-12">
							<div class="card  box-shadow-0">
								<div class="card-header d-flex justify-content-between" style="padding-top:15px">
                                  <h4 class="card-title mb-1">Add User</h4>
                                  <a href="/users/show_users" class="btn btn-primary">Back</a>
                               
								</div>
                          
                             <div style="text-align:center;"><p class="popular_job_show"></p></div>
								<div class="card-body pt-0" >
									<form  method="post" action="/users/add_users" enctype="multipart/form-data" >
                              
										<br>

                                        <div class="row">
                                    
                                            <div class="col-md-4">
                                            <div class="form-group" >
                                            <label>Enter Name <span class="required_">*</span></label>
											    <input type="text" class="form-control" name="name" id="inputName" placeholder="Enter Name" required>
										    </div>
                                            </div>

                                        <div class="col-md-4">
                                            <div class="form-group" >
                                                <label>Enter Email <span class="required_">*</span></label>
											    <input type="text" class="form-control" name="email" id="inputName" placeholder="Enter Email" required>
										    </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group" >
                                                <label>Enter Number <span class="required_">*</span></label>
											    <input type="text" class="form-control" name="number" id="inputName" placeholder="Enter Number" required>
										    </div>
                                        </div>
                                        <div class="col-md-4">
                                            
                                            <label>Select Role <span class="required_">*</span></label>
											<select style="height:45px" class="form-control" name="role"  id="inputName" required>
                                                <option value="">-Select Exprience-</option>
                                                <% allRoles.forEach(function(role){ %>
                                                <option value="<%= role._id %>"> <%= role.roles %> </option>
                                                <% }); %>
                                             
                                            </select>
										    
                                            </div>
                                        <div class="col-md-4">
                                            <div class="form-group" >
                                                <label>Enter Password <span class="required_">*</span></label>
											    <input type="text" class="form-control" name="password" id="inputName" placeholder="Enter password" required>
										    </div>
                                        </div>
                                        <!-- <div class="col-md-4">
                                            <div class="form-group" >
                                                <label>Confirm Password <span class="required_">*</span></label>
											    <input type="text" class="form-control" id="inputName" placeholder="Enter password" required>
										    </div>
                                        </div> -->

                                        <div class="col-md-12">
                                            <h4 class="card-title mb-1">Bank Details</h4>
                                       </div><br><br><br>

                                       <div class="col-md-6">
                                        <div class="form-group" >
                                        <label>Enter Account Holder's Name</label>
                                            <input type="text" class="form-control" name="accountHolderName" id="inputName" placeholder="Account Holder's Name">
                                        </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group" >
                                            <label>Enter Account No.</label>
                                                <input type="text" class="form-control" name="accountNumber" id="inputName" placeholder="Account No.">
                                            </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group" >
                                                <label>Enter Bank Name</label>
                                                    <input type="text" class="form-control" name="bankName" id="inputName" placeholder="Bank Name">
                                                </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group" >
                                                    <label>Enter Ifsc No.</label>
                                                        <input type="text" class="form-control" name="ifscNumber" id="inputName" placeholder="Ifsc No.">
                                                    </div>
                                                    </div>

										<div class="form-group mb-0 mt-3 justify-content-end">
										<div><br>
												<button type="submit" class="btn btn-primary">Submit</button>
												
										</div>
                                        </div>
                                    
									</form>

								</div>
							</div>
						</div>
                    </div>
 

